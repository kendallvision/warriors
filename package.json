{
  "name": "warriors",
  "version": "2.0.0",
  "private": true,
  "dependencies": {
    "@webcomponents/webcomponentsjs": "^2.2.10",
    "express": "^4.17.1",
    "lit-element": "^2.2.0"
  },
  "scripts": {
    "build": "polymer build",
    "deploy": "npm run build && firebase deploy --project warriorsforchrist2007",
    "start": "nodemon --inspect ./server.js",
    "watch:components": "onchange 'src/components/*.ts' -- npm run build",
    "watch:pack": "webpack --config webpack.config.js",
    "watch:ux": "onchange '*.html' -- npm run build",
    "watch": "concurrently --kill-others \"npm start\" \"npm run watch:pack\" \"npm run watch:ux\" \"npm run watch:components\"",
    "finder": "ps aux | grep 'node --inspect'"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^12.0.12",
    "concurrently": "^4.1.1",
    "firebase-tools": "^7.0.2",
    "onchange": "^6.0.0",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.2",
    "webpack": "^4.35.2",
    "webpack-cli": "^3.3.5"
  }
}
